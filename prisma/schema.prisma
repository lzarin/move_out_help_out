// Move Out Help Out — Production schema
// Roles: DONOR (campus/student), NONPROFIT, COORDINATOR

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// SQLite: use String for roles/status (same values in app code).

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  role          String    // DONOR | NONPROFIT | COORDINATOR
  passwordHash  String?   // for email/password sign-up; null for demo/legacy users
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  accounts       Account[]
  sessions       Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Organization {
  id          String           @id @default(cuid())
  type        String           // CAMPUS | NONPROFIT
  name        String
  slug        String           @unique
  description String?
  address     String?
  contactEmail String?
  contactPhone String?
  area        String?          // e.g. "Bay Area, CA" — used to filter inventory/pickups by region
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  users       User[]
  inventory   InventoryItem[]  @relation("DonorInventory")
  pickupWindows PickupWindow[]
  claims      Claim[]          @relation("NonprofitClaims")
  assignments LogisticsAssignment[] @relation("AssignedNonprofit")
  donorAssignments LogisticsAssignment[] @relation("DonorLocation")
}

model InventoryItem {
  id          String          @id @default(cuid())
  donorId     String
  donor       Organization    @relation("DonorInventory", fields: [donorId], references: [id], onDelete: Cascade)
  title       String
  description String?
  category    String
  quantity    Int             @default(1)
  unit        String          @default("item")
  status      String        @default("LISTED") // LISTED | CLAIMED | PICKED_UP | DELIVERED | CANCELLED
  imageUrls   String?       // JSON array of image URL strings
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  listedUntil DateTime?

  claims      Claim[]
}

model PickupWindow {
  id          String       @id @default(cuid())
  donorId     String
  donor       Organization @relation(fields: [donorId], references: [id], onDelete: Cascade)
  startsAt    DateTime
  endsAt      DateTime
  status      String       @default("SCHEDULED") // SCHEDULED | IN_PROGRESS | COMPLETED | CANCELLED
  notes       String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  assignment  LogisticsAssignment?
}

model Claim {
  id           String          @id @default(cuid())
  nonprofitId  String
  nonprofit    Organization    @relation("NonprofitClaims", fields: [nonprofitId], references: [id], onDelete: Cascade)
  itemId       String
  item         InventoryItem   @relation(fields: [itemId], references: [id], onDelete: Cascade)
  quantity     Int             @default(1)
  status      String          @default("LISTED")
  requestedAt DateTime        @default(now())
  notes       String?

  @@unique([nonprofitId, itemId])
}

model LogisticsAssignment {
  id           String       @id @default(cuid())
  pickupWindowId String     @unique
  pickupWindow PickupWindow @relation(fields: [pickupWindowId], references: [id], onDelete: Cascade)
  nonprofitId  String
  nonprofit    Organization @relation("AssignedNonprofit", fields: [nonprofitId], references: [id], onDelete: Cascade)
  donorId      String
  donor        Organization @relation("DonorLocation", fields: [donorId], references: [id], onDelete: Cascade)
  status       String       @default("SCHEDULED")
  driverNotes  String?
  completedAt  DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}
